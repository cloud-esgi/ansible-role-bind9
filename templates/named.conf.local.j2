{% for zone in bind9_zones %}
zone "{{ zone.name }}" {
    {% if bind9_master_inv_name == inventory_hostname %}
    type master;
    {% else %}
    type slave;
    {% endif %}

    file "/etc/bind/db.{{ zone.name }}";

    {% if bind9_master_inv_name == inventory_hostname %}
    notify yes;
    allow-transfer { 
        {{ zone.allow_transfer | join(';') }};
    };
    {% else %}
    masters {
        {{ zone.master | join(';') }};
    };
    {% endif %}
};
{% endfor %}

